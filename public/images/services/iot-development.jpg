<svg width="1200" height="800" xmlns="http://www.w3.org/2000/svg">
  <!-- Background gradient -->
  <defs>
    <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="#4b6584" />
      <stop offset="100%" stop-color="#2c3e50" />
    </linearGradient>
    <linearGradient id="highlight" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="#0984e3" />
      <stop offset="100%" stop-color="#74b9ff" />
    </linearGradient>
    <radialGradient id="glow" cx="50%" cy="50%" r="50%" fx="50%" fy="50%">
      <stop offset="0%" stop-color="#0984e3" stop-opacity="0.2" />
      <stop offset="100%" stop-color="#0984e3" stop-opacity="0" />
    </radialGradient>
  </defs>
  
  <!-- Background -->
  <rect width="100%" height="100%" fill="url(#bg)" />
  
  <!-- Grid pattern -->
  <path d="M50 50 H1150 M50 150 H1150 M50 250 H1150 M50 350 H1150 M50 450 H1150 M50 550 H1150 M50 650 H1150 M50 750 H1150 M150 50 V750 M250 50 V750 M350 50 V750 M450 50 V750 M550 50 V750 M650 50 V750 M750 50 V750 M850 50 V750 M950 50 V750 M1050 50 V750" stroke="#ffffff" stroke-width="1" stroke-opacity="0.05" />
  
  <!-- IoT ecosystem illustration -->
  <g transform="translate(600, 400)">
    <!-- Glow effect -->
    <circle cx="0" cy="0" r="300" fill="url(#glow)" />
    
    <!-- Connected home devices -->
    <g transform="translate(-200, -100)">
      <!-- Smart home -->
      <path d="M-60,-50 L0,-100 L60,-50 L60,50 L-60,50 Z" fill="#dfe6e9" stroke="#636e72" stroke-width="2" />
      <rect x="-40" y="-30" width="30" height="30" rx="2" ry="2" fill="#0984e3" opacity="0.7" />
      <rect x="10" y="-30" width="30" height="30" rx="2" ry="2" fill="#0984e3" opacity="0.7" />
      <rect x="-40" y="10" width="80" height="30" rx="2" ry="2" fill="#0984e3" opacity="0.7" />
      <circle cx="0" cy="-80" r="5" fill="#0984e3">
        <animate attributeName="r" values="5;7;5" dur="2s" repeatCount="indefinite" />
      </circle>
    </g>
    
    <!-- Wearable devices -->
    <g transform="translate(150, -150)">
      <!-- Smartwatch -->
      <rect x="-25" y="-35" width="50" height="70" rx="10" ry="10" fill="#34495e" stroke="#2c3e50" stroke-width="2" />
      <rect x="-20" y="-30" width="40" height="60" rx="5" ry="5" fill="#0984e3" opacity="0.7" />
      <rect x="-15" y="-25" width="30" height="10" rx="2" ry="2" fill="#dfe6e9" opacity="0.5" />
      <rect x="-15" y="-10" width="30" height="10" rx="2" ry="2" fill="#dfe6e9" opacity="0.5" />
      <rect x="-15" y="5" width="30" height="10" rx="2" ry="2" fill="#dfe6e9" opacity="0.5" />
      <rect x="-15" y="20" width="30" height="10" rx="2" ry="2" fill="#dfe6e9" opacity="0.5" />
      <circle cx="0" cy="-60" r="5" fill="#0984e3">
        <animate attributeName="r" values="5;7;5" dur="2.5s" repeatCount="indefinite" />
      </circle>
    </g>
    
    <!-- Industrial IoT -->
    <g transform="translate(-150, 150)">
      <!-- Factory -->
      <rect x="-50" y="-40" width="100" height="80" rx="5" ry="5" fill="#636e72" stroke="#2d3436" stroke-width="2" />
      <rect x="-40" y="-30" width="20" height="30" rx="2" ry="2" fill="#b2bec3" />
      <rect x="-10" y="-30" width="20" height="30" rx="2" ry="2" fill="#b2bec3" />
      <rect x="20" y="-30" width="20" height="30" rx="2" ry="2" fill="#b2bec3" />
      <rect x="-40" y="10" width="80" height="20" rx="2" ry="2" fill="#b2bec3" />
      <circle cx="0" cy="-60" r="5" fill="#0984e3">
        <animate attributeName="r" values="5;7;5" dur="1.8s" repeatCount="indefinite" />
      </circle>
    </g>
    
    <!-- Agricultural sensors -->
    <g transform="translate(200, 100)">
      <!-- Plant sensor -->
      <path d="M-10,40 L10,40 L5,0 L15,-20 L0,-30 L-15,-20 L-5,0 Z" fill="#00b894" opacity="0.8" />
      <rect x="-2" y="40" width="4" height="30" fill="#636e72" />
      <circle cx="0" cy="-50" r="5" fill="#0984e3">
        <animate attributeName="r" values="5;7;5" dur="2.2s" repeatCount="indefinite" />
      </circle>
    </g>
    
    <!-- Central cloud hub -->
    <g transform="translate(0, 0)">
      <!-- Cloud shape -->
      <path d="M-40,-20 C-50,-40 -30,-60 -10,-60 C0,-80 30,-80 40,-60 C60,-70 80,-60 80,-40 C90,-30 90,-10 80,0 C85,20 70,40 50,40 C40,60 10,60 0,40 C-20,50 -50,40 -60,20 C-80,20 -80,-10 -60,-20" fill="#dfe6e9" opacity="0.7" stroke="#636e72" stroke-width="2" />
      <text x="0" y="5" font-family="Arial" font-size="16" font-weight="bold" text-anchor="middle" fill="#2d3436">IoT Cloud</text>
    </g>
    
    <!-- Connection lines -->
    <line x1="-150" y1="50" x2="-50" y2="20" stroke="#0984e3" stroke-width="2" stroke-opacity="0.5" />
    <line x1="150" y1="70" x2="60" y2="20" stroke="#0984e3" stroke-width="2" stroke-opacity="0.5" />
    <line x1="120" y1="-100" x2="40" y2="-40" stroke="#0984e3" stroke-width="2" stroke-opacity="0.5" />
    <line x1="-120" y1="-80" x2="-40" y2="-40" stroke="#0984e3" stroke-width="2" stroke-opacity="0.5" />
    
    <!-- Data packets -->
    <circle cx="-120" cy="-50" r="4" fill="#0984e3">
      <animate attributeName="cx" values="-120;-40" dur="3s" repeatCount="indefinite" />
      <animate attributeName="cy" values="-80;-40" dur="3s" repeatCount="indefinite" />
    </circle>
    <circle cx="80" cy="-80" r="4" fill="#0984e3">
      <animate attributeName="cx" values="120;40" dur="2s" repeatCount="indefinite" />
      <animate attributeName="cy" values="-100;-40" dur="2s" repeatCount="indefinite" />
    </circle>
    <circle cx="-100" cy="30" r="4" fill="#0984e3">
      <animate attributeName="cx" values="-150;-50" dur="4s" repeatCount="indefinite" />
      <animate attributeName="cy" values="50;20" dur="4s" repeatCount="indefinite" />
    </circle>
    <circle cx="100" cy="50" r="4" fill="#0984e3">
      <animate attributeName="cx" values="150;60" dur="3.5s" repeatCount="indefinite" />
      <animate attributeName="cy" values="70;20" dur="3.5s" repeatCount="indefinite" />
    </circle>
  </g>
  
  <!-- IoT icon -->
  <g transform="translate(200, 200)">
    <circle cx="0" cy="0" r="80" fill="none" stroke="url(#highlight)" stroke-width="6" opacity="0.6" />
    <text x="0" y="10" font-family="Arial" font-size="30" font-weight="bold" text-anchor="middle" fill="#ffffff">IoT</text>
  </g>
  
  <!-- Text label -->
  <text x="600" y="700" font-family="Arial" font-size="40" font-weight="bold" text-anchor="middle" fill="white" opacity="0.9">IoT Development</text>
</svg> 