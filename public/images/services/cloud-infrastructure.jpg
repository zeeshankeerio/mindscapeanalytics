<svg width="1200" height="800" xmlns="http://www.w3.org/2000/svg">
  <!-- Background gradient -->
  <defs>
    <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="#2c3e50" />
      <stop offset="100%" stop-color="#0e1a2d" />
    </linearGradient>
    <linearGradient id="cloud-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="#3498db" />
      <stop offset="100%" stop-color="#2980b9" />
    </linearGradient>
    <radialGradient id="glow" cx="50%" cy="50%" r="50%" fx="50%" fy="50%">
      <stop offset="0%" stop-color="#3498db" stop-opacity="0.2" />
      <stop offset="100%" stop-color="#3498db" stop-opacity="0" />
    </radialGradient>
  </defs>
  
  <!-- Background -->
  <rect width="100%" height="100%" fill="url(#bg)" />
  
  <!-- Grid pattern -->
  <path d="M50 50 H1150 M50 150 H1150 M50 250 H1150 M50 350 H1150 M50 450 H1150 M50 550 H1150 M50 650 H1150 M50 750 H1150 M150 50 V750 M250 50 V750 M350 50 V750 M450 50 V750 M550 50 V750 M650 50 V750 M750 50 V750 M850 50 V750 M950 50 V750 M1050 50 V750" stroke="#ffffff" stroke-width="1" stroke-opacity="0.05" />
  
  <!-- Cloud infrastructure illustration -->
  <g transform="translate(600, 400)">
    <!-- Glow effect -->
    <circle cx="0" cy="0" r="300" fill="url(#glow)" />
    
    <!-- Main cloud -->
    <path d="M-100,-50 
             C-120,-85 -120,-120 -70,-130 
             C-60,-180 0,-190 40,-155
             C65,-190 120,-190 140,-150
             C190,-165 210,-130 190,-95
             C220,-80 220,-40 190,-20
             C200,15 175,40 140,30
             C125,60 85,70 50,50
             C30,75 -20,75 -40,50
             C-85,65 -130,45 -135,5
             C-175,5 -185,-35 -155,-50
             C-165,-80 -135,-100 -100,-50"
          fill="url(#cloud-gradient)" opacity="0.7" />
    
    <!-- Server racks -->
    <g transform="translate(-60, 20)">
      <!-- Server rack 1 -->
      <rect x="-40" y="-60" width="80" height="120" rx="5" ry="5" fill="#34495e" stroke="#2c3e50" stroke-width="2" />
      
      <!-- Server units -->
      <rect x="-35" y="-55" width="70" height="15" rx="2" ry="2" fill="#7f8c8d" stroke="#2c3e50" stroke-width="1" />
      <circle cx="-25" cy="-47.5" r="2" fill="#27ae60" />
      <circle cx="-15" cy="-47.5" r="2" fill="#e74c3c" />
      
      <rect x="-35" y="-35" width="70" height="15" rx="2" ry="2" fill="#7f8c8d" stroke="#2c3e50" stroke-width="1" />
      <circle cx="-25" cy="-27.5" r="2" fill="#27ae60" />
      <circle cx="-15" cy="-27.5" r="2" fill="#e74c3c" />
      
      <rect x="-35" y="-15" width="70" height="15" rx="2" ry="2" fill="#7f8c8d" stroke="#2c3e50" stroke-width="1" />
      <circle cx="-25" cy="-7.5" r="2" fill="#27ae60" />
      <circle cx="-15" cy="-7.5" r="2" fill="#e74c3c" />
      
      <rect x="-35" y="5" width="70" height="15" rx="2" ry="2" fill="#7f8c8d" stroke="#2c3e50" stroke-width="1" />
      <circle cx="-25" cy="12.5" r="2" fill="#27ae60" />
      <circle cx="-15" cy="12.5" r="2" fill="#e74c3c" />
      
      <rect x="-35" y="25" width="70" height="15" rx="2" ry="2" fill="#7f8c8d" stroke="#2c3e50" stroke-width="1" />
      <circle cx="-25" cy="32.5" r="2" fill="#27ae60" />
      <circle cx="-15" cy="32.5" r="2" fill="#e74c3c" />
      
      <rect x="-35" y="45" width="70" height="15" rx="2" ry="2" fill="#7f8c8d" stroke="#2c3e50" stroke-width="1" />
      <circle cx="-25" cy="52.5" r="2" fill="#27ae60" />
      <circle cx="-15" cy="52.5" r="2" fill="#e74c3c" />
    </g>
    
    <g transform="translate(60, 20)">
      <!-- Server rack 2 -->
      <rect x="-40" y="-60" width="80" height="120" rx="5" ry="5" fill="#34495e" stroke="#2c3e50" stroke-width="2" />
      
      <!-- Server units -->
      <rect x="-35" y="-55" width="70" height="15" rx="2" ry="2" fill="#7f8c8d" stroke="#2c3e50" stroke-width="1" />
      <circle cx="-25" cy="-47.5" r="2" fill="#27ae60" />
      <circle cx="-15" cy="-47.5" r="2" fill="#e74c3c" />
      
      <rect x="-35" y="-35" width="70" height="15" rx="2" ry="2" fill="#7f8c8d" stroke="#2c3e50" stroke-width="1" />
      <circle cx="-25" cy="-27.5" r="2" fill="#27ae60" />
      <circle cx="-15" cy="-27.5" r="2" fill="#e74c3c" />
      
      <rect x="-35" y="-15" width="70" height="15" rx="2" ry="2" fill="#7f8c8d" stroke="#2c3e50" stroke-width="1" />
      <circle cx="-25" cy="-7.5" r="2" fill="#27ae60" />
      <circle cx="-15" cy="-7.5" r="2" fill="#e74c3c" />
      
      <rect x="-35" y="5" width="70" height="15" rx="2" ry="2" fill="#7f8c8d" stroke="#2c3e50" stroke-width="1" />
      <circle cx="-25" cy="12.5" r="2" fill="#27ae60" />
      <circle cx="-15" cy="12.5" r="2" fill="#e74c3c" />
      
      <rect x="-35" y="25" width="70" height="15" rx="2" ry="2" fill="#7f8c8d" stroke="#2c3e50" stroke-width="1" />
      <circle cx="-25" cy="32.5" r="2" fill="#27ae60" />
      <circle cx="-15" cy="32.5" r="2" fill="#e74c3c" />
      
      <rect x="-35" y="45" width="70" height="15" rx="2" ry="2" fill="#7f8c8d" stroke="#2c3e50" stroke-width="1" />
      <circle cx="-25" cy="52.5" r="2" fill="#27ae60" />
      <circle cx="-15" cy="52.5" r="2" fill="#e74c3c" />
    </g>
    
    <!-- Connection lines -->
    <line x1="-60" y1="-50" x2="0" y2="-150" stroke="#3498db" stroke-width="2" stroke-opacity="0.6" />
    <line x1="60" y1="-50" x2="0" y2="-150" stroke="#3498db" stroke-width="2" stroke-opacity="0.6" />
    <line x1="0" y1="-150" x2="0" y2="-200" stroke="#3498db" stroke-width="2" stroke-opacity="0.6" />
    
    <!-- Container elements -->
    <g transform="translate(-150, -100)">
      <rect x="-30" y="-20" width="60" height="40" rx="5" ry="5" fill="#e74c3c" fill-opacity="0.7" />
      <rect x="-20" y="-10" width="40" height="20" rx="3" ry="3" fill="#c0392b" fill-opacity="0.5" />
    </g>
    
    <g transform="translate(150, -100)">
      <rect x="-30" y="-20" width="60" height="40" rx="5" ry="5" fill="#2ecc71" fill-opacity="0.7" />
      <rect x="-20" y="-10" width="40" height="20" rx="3" ry="3" fill="#27ae60" fill-opacity="0.5" />
    </g>
    
    <g transform="translate(0, -200)">
      <rect x="-30" y="-20" width="60" height="40" rx="5" ry="5" fill="#f1c40f" fill-opacity="0.7" />
      <rect x="-20" y="-10" width="40" height="20" rx="3" ry="3" fill="#f39c12" fill-opacity="0.5" />
    </g>
    
    <!-- Data flow animations -->
    <circle cx="-30" cy="-100" r="3" fill="#3498db">
      <animate attributeName="cx" values="-60;0" dur="2s" repeatCount="indefinite" />
      <animate attributeName="cy" values="-50;-150" dur="2s" repeatCount="indefinite" />
    </circle>
    
    <circle cx="30" cy="-100" r="3" fill="#3498db">
      <animate attributeName="cx" values="60;0" dur="1.5s" repeatCount="indefinite" />
      <animate attributeName="cy" values="-50;-150" dur="1.5s" repeatCount="indefinite" />
    </circle>
    
    <circle cx="0" cy="-175" r="3" fill="#3498db">
      <animate attributeName="cy" values="-150;-200" dur="1s" repeatCount="indefinite" />
    </circle>
  </g>
  
  <!-- DevOps infinity symbol -->
  <g transform="translate(300, 250)">
    <path d="M-50,0 C-50,-30 -30,-50 0,-50 C30,-50 50,-30 50,0 C50,30 30,50 0,50 C-30,50 -50,30 -50,0 Z M50,0 C50,-30 70,-50 100,-50 C130,-50 150,-30 150,0 C150,30 130,50 100,50 C70,50 50,30 50,0 Z" 
          fill="none" stroke="#3498db" stroke-width="6" stroke-opacity="0.4" />
          
    <text x="50" y="0" font-family="Arial" font-size="24" font-weight="bold" text-anchor="middle" fill="#ffffff" opacity="0.6" dominant-baseline="middle">DevOps</text>
  </g>
  
  <!-- Text label -->
  <text x="600" y="700" font-family="Arial" font-size="40" font-weight="bold" text-anchor="middle" fill="white" opacity="0.9">Cloud Infrastructure & DevOps</text>
</svg> 